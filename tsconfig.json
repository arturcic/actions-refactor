{
    "compilerOptions": {
        "baseUrl" : "./src",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            /*TODO check is ts 5.3 has fetch API types defined, and then remove*/
            "dom"
        ],
        "types": [
            "node", "vite/client"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        /*"moduleResolution": "bundler",*/
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@agents/common": ["./agents/common"],
            "@agents/fake": [
                "./agents/fake"
            ],
            "@agents/azure": ["./agents/azure"],
            "@agents/github": ["./agents/github"],
            "@tools/common": ["./tools/common"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
